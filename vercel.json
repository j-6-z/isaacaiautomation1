{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "50mb",
        "includeFiles": ["*.html", "images/*"]
      }
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "images/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(create_payment|execute_payment|debug|success|cancel)",
      "methods": ["GET", "POST", "OPTIONS"],
      "dest": "api/index.py",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization",
        "Content-Type": "application/json"
      }
    },
    {
      "src": "/api/.*",
      "methods": ["GET", "POST", "OPTIONS"],
      "dest": "api/index.py",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization",
        "Content-Type": "application/json"
      }
    },
    {
      "src": "/(index|Purchasepage|pricing|contact|TOS_SUCH|receipt)\\.html",
      "dest": "$1.html"
    },
    {
      "src": "/images/(.*)",
      "dest": "images/$1"
    },
    {
      "src": "/",
      "dest": "index.html"
    },
    {
      "src": "/.*",
      "dest": "index.html"
    }
  ]
}
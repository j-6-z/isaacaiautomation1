{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "images/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(create_payment|execute_payment|debug|success|cancel)",
      "methods": ["GET", "POST"],
      "dest": "app.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/(index.html|Purchasepage.html|pricing.html|contact.html|TOS_SUCH.html|receipt.html)",
      "dest": "$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "images/$1"
    },
    {
      "src": "/(.*)",
      "dest": "index.html"
    }
  ]
}